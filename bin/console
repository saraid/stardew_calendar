#!/usr/bin/env ruby

load 'lib/stardew_calendar.rb'
include StardewCalendar

StardewCalendar.export_constants

load 'lib/refinements/sane_inspection.rb'
SaneInspection.saneify_inspect_on_every_class!(StardewCalendar)

load 'bin/run_plan'

def reload
  @farm = nil
  load 'lib/plan.rb'
end

require "irb"

IRB.start
